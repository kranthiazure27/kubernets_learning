#Commands for KOPS

aws s3api create-bucket \
  --bucket my-kranthi-storage  \
  --region us-east-1

kops create cluster \
  --name mycluster.k8s.local \
  --state s3://my-kranthi-storage \
  --zones us-east-1a,us-east-1b \
  --node-count 2 \
  --node-size t3.medium \
  --master-size t3.medium


kops edit cluster mycluster.k8s.local --state s3://my-kranthi-storage

kops update cluster mycluster.k8s.local --state s3://my-kranthi-storage --yes

kops validate cluster mycluster.k8s.local --state s3://my-kranthi-storage

  
#Command to create user and context in kubectl
kubectl config set-credentials dev-user --token=<paste-token-here>

kubectl config set-context dev-context \
  --cluster=minikube \
  --namespace=amc-namespace \
  --user=dev-user

kubectl config use-context dev-context
